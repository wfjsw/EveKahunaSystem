# ============================================
# KahunaBot 配置文件模板 (TOML 格式)
# ============================================
# 复制此文件为 config.toml 并填写相应的配置值

[APP]
# 数据库类型: sqlite, postgresql
DBTYPE = "sqlite"

# 成本计划用户ID
COST_PLAN_USER = 0

# 成本计划名称
COST_PLAN_NAME = ""

# 公司资产用户ID
CORP_ASSET_USER = 0

# 图片渲染代理 (留空则不使用)
PIC_RENDER_PROXY = ""

# 代理服务器地址
PROXY = "127.0.0.1"

# 代理端口
PORT = 7890

[FEISHU]
# 飞书应用ID
APP_ID = ""

# 飞书密钥
SECRET_ID = ""

# 文件夹根目录ID
FOLDER_ROOT = ""

[GOOGLE]
# Google API 凭证文件路径
CREDENTIALS = ""

# 市场监控电子表格ID
MARKET_MONITOR_SPREADSHEET_ID = ""

[POSTGREDB]
# PostgreSQL 数据库配置
Host = ""
Port = 5432
Database = ""
User = ""
Password = ""

[REDIS]
# Redis 配置
Host = ""
Port = 6379

[NEO4J]
# Neo4j 图数据库配置
Host = ""
Port = 7687
Username = ""
Password = ""

[SQLITEDB]
# SQLite 数据库文件路径
CONFIG_DB = ""
CACHE_DB = ""
SDEDB = ""
CN_SDEDB = ""

[EVE]
# EVE Online API 配置
CLIENT_ID = ""
SECRET_KEY = ""

# 市场账户角色ID
MARKET_AC_CHARACTER_ID = 0

# 参考材料权重
REF_MATER_WEIGHT = 0.3

# 参考利润权重
REF_PROFIT_WEIGHT = 0.7

# 回调本地主机
CALLBACK_LOCAL_HOST = ""

# 回调本地地址
CALLBACK_LOCAL_ADD = "https://localhost:9527/"

[ESI]
# ESI API 权限配置
# 设置为 true 启用，false 禁用

# 公共数据访问
publicData = false

